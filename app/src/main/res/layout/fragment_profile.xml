<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/company_header_holder"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/rectangle2"
            >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/merchant_profile_image_profile"
                    android:layout_width="230dp"
                    android:layout_height="150dp"
                    android:src="@drawable/nav_header_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">
                </de.hdodenhof.circleimageview.CircleImageView>

            <ImageButton
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit_profile_icon"
                android:background="#00BCD4"
                android:padding="10dp"></ImageButton>


                <TextView
                    android:id="@+id/merchant_name_profile_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merchant_profile_image_profile"
                    android:textColor="@color/yellowText"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_header_holder">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                        <RelativeLayout
                            android:id="@+id/first_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                                <TextView
                                    android:id="@+id/account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Account Information"
                                    android:layout_marginTop="40dp"
                                    android:textSize="25sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold"
                                    />

                                <View
                                    android:id="@+id/hr"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="#050D1E"
                                    android:layout_below="@+id/account"/>


                                <LinearLayout
                                    android:id="@+id/Account_first"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/hr"
                                    >

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Name:"
                                                android:textSize="20sp"
                                                android:textColor="#010220"
                                            android:textStyle="bold"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/merchant_name_profile_TextView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000"
                                           />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/Account_second"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/Account_first">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Phone:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/merchant_phone_profile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/Account_third"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/Account_second">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Email:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/merchant_email_profile_account"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000" />


                                </LinearLayout>


                                <TextView
                                    android:id="@+id/business"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Business Information"
                                    android:layout_marginTop="40dp"
                                    android:textSize="25sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold"
                                    android:layout_below="@id/Account_third"
                                    />

                                <View
                                    android:id="@+id/hr1"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="#050D1E"
                                    android:layout_below="@+id/business"/>


                                <LinearLayout
                                    android:id="@+id/business_first"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_below="@+id/hr1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Business Name:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/business_name_profile_TextView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000"
                                           />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/business_second"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/business_first">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Business Details:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/business_details_profile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000" />


                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/business_third"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/business_second">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Business Address:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/business_address_profile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000" />



                                </LinearLayout>




                                <TextView
                                    android:id="@+id/payment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Information"
                                    android:layout_marginTop="40dp"
                                    android:textSize="25sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold"
                                    android:layout_below="@id/business_third"
                                    />

                                <View
                                    android:id="@+id/hr2"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="#050D1E"
                                    android:layout_below="@+id/payment"/>


                                <LinearLayout
                                    android:id="@+id/payment_first"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_below="@+id/hr2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Bkash:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/bkash_num_profile_TextView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/payment_second"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/payment_first">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rocket:"
                                            android:textSize="20sp"
                                            android:textColor="#010220"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"/>

                                        <TextView
                                            android:id="@+id/merchant_rocket_num_profile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:textColor="#000000"
                                            android:layout_marginBottom="40dp"/>


                                </LinearLayout>








                        </RelativeLayout>








                </ScrollView>




        </RelativeLayout>



        </RelativeLayout>















</FrameLayout>