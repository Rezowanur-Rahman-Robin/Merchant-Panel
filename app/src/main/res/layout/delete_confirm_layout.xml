<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="#B8B8B8">


    <TextView
        android:id="@+id/confirm_Text"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="Are you really want to delete this product?"
        android:textColor="#00024B"
        android:textSize="25dp"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/confirm_Text"
        >


        <Button
            android:id="@+id/cancel_popup_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B10000"
            android:layout_below="@+id/payment_second"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:text="Cancel"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/delete_popup_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#007C3A"
            android:layout_below="@+id/payment_second"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:text="Delete"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"/>






    </RelativeLayout>

</RelativeLayout>