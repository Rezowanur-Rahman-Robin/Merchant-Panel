<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardView_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/product_image"/>
        <TextView
            android:id="@+id/product_name_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@+id/cardView_image"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_cardView"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_price_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500 ৳   "
                android:textStyle="bold"
                android:textColor="@color/yellowText"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/product_discount_price_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500 ৳"
                android:textStyle="bold"
                android:textColor="@color/yellowText"
                android:textSize="15sp"
                android:visibility="gone"
                />

        </LinearLayout>




    </RelativeLayout>



</RelativeLayout>